FROM node:10 AS builder
WORKDIR /app
COPY ./package.json ./
RUN yarn install
COPY . .
RUN yarn build

FROM node:10-alpine
RUN yarn add web3
RUN yarn add bcryptjs @nestjs/passport @nestjs/common reflect-metadata rxjs passport @nestjs/jwt passport-local passport-jwt nestjs-redis
RUN yarn add typeorm nestjs-typeorm-paginate @nestjs/schedule @nestjs/core
RUN yarn --version
WORKDIR /app
COPY --from=builder /app ./

EXPOSE 3000
CMD ["yarn", "start:prod"]
